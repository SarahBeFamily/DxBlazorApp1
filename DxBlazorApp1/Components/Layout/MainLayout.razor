                    position: { horizontal: 'right', vertical: 'bottom' },
                    color: {
                        theme: '#FF5A1E',
                        launcher: '#FF5A1E', // This will also update the badge
                        launcherText: '#E589B7',
                        button: '#FF5A1E',
                        resultLists: '#FF5A1E',
                        header: '##FF5A1E',
                        articleLinks: '#FF5A1E'
                    }


