    <div id="main-container" class="flex @flexWrap">
        <div id="sidebar" class="@sidebarClass">
            <ISystemMenu></ISystemMenu>
        </div>

        <div class="main-content">
            @Body
        </div>
    </div>

    <footer>
        <div id="assistenza">
            <img id="myLauncher" src="/images/fab-button.svg" onclick="openWidget()" />
